{
  "name": "focus_quest_dev_tools",
  "version": "1.0.0",
  "private": true,
  "description": "Dev tools for Focus Quest",
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "husky": "^8.0.3"
  },
  "scripts": {
    "prepare": "husky install",
    "build:web": "flutter build web --release",
    "build:web:hosting": "flutter build web --release && firebase deploy --only hosting --project focusquest-d328c",
    "deploy:hosting": "firebase deploy --only hosting --project focusquest-d328c",
    "deploy:firestore": "firebase deploy --only firestore --project focusquest-d328c",
    "deploy:all": "firebase deploy --project focusquest-d328c",
    "release:web": "npm run build:web && npm run deploy:all"
  }
}